<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_reconcile_widget_view_form" model="ir.ui.view">
        <field name="name">payment.reconcile.widget.direct.form</field>
        <field name="model">payment.reconcile.widget</field>
        <field name="arch" type="xml">
            <form string="Direct Payment Reconciliation">
                <header>
                    <button name="action_auto_reconcile" string="Auto Reconcile" type="object" class="btn-primary"/>
                    <button name="action_reconcile_selected" string="Reconcile Selected" type="object" class="btn-success"/>
                    <button name="action_refresh" string="Refresh" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="payment_id" options="{'no_create': True, 'no_edit': True}" readonly="1"/>
                        </h1>
                        <h2>
                            Partner: <field name="partner_id" readonly="1" options="{'no_create': True, 'no_edit': True}"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="reconcile_account_id" readonly="1"/>
                            <field name="payment_balance" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Available Lines for Reconciliation">
                            <field name="available_line_ids" readonly="1">
                                <tree decoration-muted="reconciled">
                                    <field name="date"/>
                                    <field name="move_id"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="account_id" invisible="1"/>
                                    <field name="partner_id" invisible="1"/>
                                    <field name="debit" sum="Total Debit"/>
                                    <field name="credit" sum="Total Credit"/>
                                    <field name="balance" sum="Total Balance"/>
                                    <field name="amount_currency" groups="base.group_multi_currency"/>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="reconciled" invisible="1"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Selected Lines">
                            <field name="selected_line_ids" domain="[('id', 'in', available_line_ids)]">
                                <tree decoration-info="True">
                                    <field name="date"/>
                                    <field name="move_id"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="debit" sum="Total Debit"/>
                                    <field name="credit" sum="Total Credit"/>
                                    <field name="balance" sum="Total Balance"/>
                                    <field name="amount_currency" groups="base.group_multi_currency"/>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Payment Details">
                            <group>
                                <group string="Payment Information">
                                    <field name="payment_id" readonly="1"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="payment_balance" readonly="1"/>
                                </group>
                                <group string="Reconciliation Details">
                                    <field name="reconcile_account_id" readonly="1"/>
                                    <label for="selected_line_ids"/>
                                    <div>
                                        <field name="selected_line_ids" readonly="1" widget="many2many_tags"/>
                                        <div class="text-muted">
                                            Selected Balance: <span id="selected_balance">0.00</span>
                                        </div>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>

                    <div class="alert alert-info mt-3">
                        <h5><i class="fa fa-info-circle"/> Instructions:</h5>
                        <ul>
                            <li><strong>Auto Reconcile:</strong> Automatically find and reconcile matching entries</li>
                            <li><strong>Manual Selection:</strong> Select lines from "Available Lines" tab, then go to "Selected Lines" tab to review</li>
                            <li><strong>Same Account Only:</strong> Only lines from the same account (<field name="reconcile_account_id" readonly="1" nolabel="1"/>) can be reconciled</li>
                            <li><strong>Balance Requirement:</strong> Total balance must equal zero for successful reconciliation</li>
                        </ul>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Direct Payment Reconcile Widget -->
    <record id="action_payment_reconcile_widget" model="ir.actions.act_window">
        <field name="name">Direct Payment Reconciliation</field>
        <field name="res_model">payment.reconcile.widget</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payment_reconcile_widget_view_form"/>
        <field name="target">current</field>
    </record>


</odoo>