<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Template for notification messages -->
    <t t-name="PaymentReconcile.Notification" owl="1">
        <div t-att-class="'alert alert-' + props.type + ' alert-dismissible fade show position-fixed'"
             style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
            <t t-esc="props.message"/>
            <button type="button" class="close" t-on-click="props.onClose">
                <span>&times;</span>
            </button>
        </div>
    </t>

    <!-- Template for loading spinner -->
    <t t-name="PaymentReconcile.Loading" owl="1">
        <div class="d-flex justify-content-center align-items-center p-4">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <span class="ml-3">Loading reconciliation data...</span>
        </div>
    </t>

    <!-- Template for empty state -->
    <t t-name="PaymentReconcile.EmptyState" owl="1">
        <div class="text-center p-4">
            <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No data available</h5>
            <p class="text-muted">
                <t t-esc="props.message or 'No reconciliation data found'"/>
            </p>
        </div>
    </t>

    <!-- Template for reconcile line item -->
    <t t-name="PaymentReconcile.LineItem" owl="1">
        <div class="reconcile_line" t-att-data-line-id="props.line.id" t-att-data-line-type="props.type">
            <div class="d-flex justify-content-between align-items-center p-3 border-bottom hover-bg">
                <div class="d-flex align-items-center">
                    <t t-if="props.type === 'reconcilable'">
                        <input type="checkbox" class="line_checkbox" t-att-data-line-id="props.line.id"/>
                    </t>
                    <t t-else="">
                        <span class="line_indicator text-primary">‚óè</span>
                    </t>
                    <div class="ml-3">
                        <strong class="line_name" t-esc="props.line.name or 'Unknown'"/>
                        <br/>
                        <small class="text-muted">
                            <t t-esc="props.line.account_name"/> | <t t-esc="props.line.date"/>
                            <t t-if="props.line.move_name"> | <t t-esc="props.line.move_name"/></t>
                        </small>
                        <t t-if="props.line.ref">
                            <br/><small class="text-info">Ref: <t t-esc="props.line.ref"/></small>
                        </t>
                    </div>
                </div>
                <div class="text-right">
                    <div class="reconcile_amounts mb-1">
                        <span class="badge badge-light debit">
                            Dr: <t t-esc="props.currencySymbol"/><t t-esc="props.line.debit.toFixed(2)"/>
                        </span>
                        <span class="badge badge-light credit">
                            Cr: <t t-esc="props.currencySymbol"/><t t-esc="props.line.credit.toFixed(2)"/>
                        </span>
                    </div>
                    <div t-att-class="'balance font-weight-bold ' + (props.line.balance > 0 ? 'text-success' : props.line.balance &lt; 0 ? 'text-danger' : 'text-muted')">
                        Balance: <t t-esc="props.currencySymbol"/><t t-esc="props.line.balance.toFixed(2)"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>